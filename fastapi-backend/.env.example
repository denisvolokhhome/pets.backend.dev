# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pet_breeding_db

# Authentication Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_LIFETIME_SECONDS=3600

# Storage Configuration
STORAGE_PATH=storage/app
STORAGE_URL=/storage

# Application Configuration
APP_NAME=Pet Breeding API
DEBUG=False
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Geocoding Configuration
# NOMINATIM_URL: Set to your Nominatim server URL
#   - Public OSM: https://nominatim.openstreetmap.org (rate limited to 1 req/sec)
#   - Local Docker: http://localhost:8080 (requires docker-compose up)
#   - Remote server: http://your-server:8080
NOMINATIM_URL=https://nominatim.openstreetmap.org
GEOCODING_USER_AGENT=BreedyPetSearch/1.0
# GEOCODING_RATE_LIMIT: Requests per second (1.0 for public, 10.0+ for local)
GEOCODING_RATE_LIMIT=1.0
# GEOCODING_CACHE_TTL: Cache duration in seconds (24 hours = 86400)
GEOCODING_CACHE_TTL=86400

# Image Upload Configuration
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1920
IMAGE_QUALITY=85

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback
